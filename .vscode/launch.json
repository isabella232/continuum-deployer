{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run CLI parse-helm",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "parse-helm",
                "-p",
                "./examples/charts/sample_multi.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run CLI parse-resources",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "parse-resources",
                "--file",
                "./examples/resources/default.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest"
        },
        {
            "name": "Run CLI interactively",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "match",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run CLI interactively less-input yaml",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "match",
                "-r",
                "examples/resources/default.yaml",
                "-d",
                "examples/charts/sample_multi.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run CLI interactively less-input yaml plugin",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "match",
                "-r",
                "examples/resources/default.yaml",
                "-d",
                "examples/charts/sample_multi.yaml",
                "-p",
                "examples/plugins"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run CLI interactively less-input archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/continuum_deployer/app.py",
            "args": [
                "match",
                "-r",
                "examples/resources/default.yaml",
                "-d",
                "examples/charts/wordpress/wordpress.tgz"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest"
        }
    ]
}